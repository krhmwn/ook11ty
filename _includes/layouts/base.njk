<!doctype html>
<html lang="id">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <link rel="shortcut icon" type="image/x-icon" href="{{ "/img/logo/favicon.ico" | url }}" />
    <link rel="apple-touch-icon" href="{{ "/img/logo/apple-touch-icon.png" | url }}" />
    <meta name="theme-color" content="#4C74B9">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand&display=swap" rel="preload">
  </head>
  <body>
    <header>
      <h1 class="home"><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1>
    </header>
    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
{{ content | safe }}
    </main>
    <footer>
    <ul class="nav">
      {%- for entry in collections.all | eleventyNavigation %}<li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>{%- endfor %}
        <li class="nav-item"><a href="{{ metadata.feed.path | url }}">RSS</a></li>
    </ul>
    </footer>
  </body>
</html>
